// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated-client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  orders         Order[]
  addresses      Address[]
  reviews        Review[]
  favorites      Product[]       @relation("UserFavorites")
  paymentMethods PaymentMethod[]
}

model Address {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String? // Label like "Home", "Work"
  firstName String
  lastName  String
  street    String
  city      String
  phone     String
  isDefault Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaymentMethod {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type          String // "Mobile Money", "Bank Card"
  provider      String // "Wave", "Orange Money", "Visa", "Mastercard"
  accountNumber String
  expiryDate    String? // For cards
  isDefault     Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  price         Decimal
  discountPrice Decimal?
  stock         Int      @default(0)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  subCategory String?
  images      String[] // Array of image URLs
  featured    Boolean  @default(false)

  allowFlocage Boolean @default(false)
  allowGravure Boolean @default(false)

  // Sizes and Stock
  sizes ProductSize[]

  orderItems  OrderItem[]
  reviews     Review[]
  favoritedBy User[]      @relation("UserFavorites")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id        String  @id @default(cuid())
  rating    Int     @default(5)
  comment   String?
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model ProductSize {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      String
  stock     Int     @default(0)

  @@unique([productId, size])
}

model Order {
  id              String  @id @default(cuid())
  userId          String?
  user            User?   @relation(fields: [userId], references: [id])
  customerName    String? // For guest checkout
  customerEmail   String? // For guest checkout
  customerPhone   String? // For POS/Guest
  customerAddress String? // For POS/Guest
  paymentMethod   String? // CASH, WAVE, OM

  status OrderStatus @default(PENDING)
  total  Decimal

  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])

  quantity Int
  price    Decimal // Price at time of purchase

  // Customization fields
  customName   String?
  customNumber String?
  size         String?
}

model StoreConfig {
  id             String  @id @default("singleton")
  name           String  @default("Mbor B. Store")
  slogan         String? @default("L'excellence du sport au Sénégal")
  description    String?
  logoUrl        String?
  contactEmail   String?
  contactPhone   String?
  address        String?
  facebookUrl    String?
  instagramUrl   String?
  tiktokUrl      String?
  whatsappNumber String?
  workingHours   String?

  // Shipping Settings
  deliveryFee      Decimal @default(2000)
  freeDeliveryOver Decimal @default(50000)
  shippingPolicy   String?

  // Payment Settings
  waveNumber    String?
  omNumber      String?
  bankAccount   String?
  paymentPolicy String?

  // Corporate
  returnPolicy String?
  aboutUs      String?
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
